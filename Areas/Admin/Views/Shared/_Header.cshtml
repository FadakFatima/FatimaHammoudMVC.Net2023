<header>
	<div id="kt_app_header" class="app-header" style="background-color: black; color:white"
		 data-kt-sticky="true" data-kt-sticky-activate="{default: true, lg: true}" data-kt-sticky-name="app-header-minimize" data-kt-sticky-offset="{default: '200px', lg: '0'}" data-kt-sticky-animation="false">
		<div class="app-container  container-fluid d-flex align-items-stretch justify-content-between " id="kt_app_header_container">
			<div class="d-flex align-items-stretch justify-content-between flex-lg-grow-1" id="kt_app_header_wrapper">
				<div class="
						app-header-menu
						app-header-mobile-drawer
						align-items-stretch
						"
					 data-kt-drawer="true"
					 data-kt-drawer-name="app-header-menu"
					 data-kt-drawer-activate="{default: true, lg: false}"
					 data-kt-drawer-overlay="true"
					 data-kt-drawer-width="250px"
					 data-kt-drawer-direction="end"
					 data-kt-drawer-toggle="#kt_app_header_menu_toggle"
					 data-kt-swapper="true"
					 data-kt-swapper-mode="{default: 'append', lg: 'prepend'}"
					 data-kt-swapper-parent="{default: '#kt_app_body', lg: '#kt_app_header_wrapper'}">
					<div class="
							menu
							menu-rounded
							menu-column
							menu-lg-row
							my-5
							my-lg-0
							align-items-stretch
							fw-semibold
							px-2 px-lg-0
							"
						 id="kt_app_header_menu"
						 data-kt-menu="true">
						
						<div data-kt-menu-trigger="{default: 'click', lg: 'hover'}" data-kt-menu-placement="bottom-start" class="menu-item menu-here-bg menu-lg-down-accordion me-0 me-lg-2">
						<span class="menu-link"><a class="menu-title" asp-area="Admin" asp-controller="Pages" asp-action="Index" style="color:white">Pages</a><span class="menu-arrow d-lg-none"></span></span>
							<!--end:Menu sub-->
						</div>
						<!--end:Menu item--><!--begin:Menu item-->
						<div data-kt-menu-trigger="{default: 'click', lg: 'hover'}" data-kt-menu-placement="bottom-start" class="menu-item menu-here-bg menu-lg-down-accordion me-0 me-lg-2"><div data-kt-menu-trigger="{default: 'click', lg: 'hover'}" data-kt-menu-placement="bottom-start" class="menu-item menu-lg-down-accordion menu-sub-lg-down-indention me-0 me-lg-2">
								<!--begin:Menu link--><span class="menu-link"><a class="menu-title" asp-area="Admin" asp-controller="Categories" asp-action="Index" style="color:white">Categories</a><span class="menu-arrow d-lg-none"></span></span><!--end:Menu link--><!--begin:Menu sub-->
						</div>
						</div>
						<div data-kt-menu-trigger="{default: 'click', lg: 'hover'}" data-kt-menu-placement="bottom-start" class="menu-item menu-lg-down-accordion menu-sub-lg-down-indention me-0 me-lg-2">
							<!--begin:Menu link--><span class="menu-link"><a class="menu-title" asp-area="Admin" asp-controller="Products" asp-action="Index" style="color:white">Products</a><span class="menu-arrow d-lg-none"></span></span><!--end:Menu link--><!--begin:Menu sub-->
						</div>
					</div>
					<a asp-area="" asp-controller="Products" asp-action="Index" class="btn btn-success" style="width:100px; position: absolute; right: 120px; top:18px">
						Go Back
					</a>
				</div>
				<div data-kt-menu-trigger="{default: 'click', lg: 'hover'}" data-kt-menu-placement="bottom-start" class="menu-item menu-lg-down-accordion menu-sub-lg-down-indention me-0 me-lg-2">
					<span class="menu-link">
						<a asp-area="" asp-controller="Account" asp-action="Logout" class="btn btn-danger" style="width:100px; position: absolute; right: 10px; top:5px">
							@User.Identity.Name Log out
						</a>
						<span class="menu-arrow d-lg-none"></span>
					</span><!--end:Menu link--><!--begin:Menu sub-->
				</div>
			</div>
		</div>
	</div>
</header>
