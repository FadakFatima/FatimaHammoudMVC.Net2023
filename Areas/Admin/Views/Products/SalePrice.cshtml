@model Product

@{
    ViewData["Title"] = "Sales";
}
<div class="container" style=" top:100px; position: absolute">

    <h1 class="col-md-4 offset-md-2">Sales</h1>
    <br />

    <form asp-action="SalePrice" asp-route-id="@Model.Id" class="col-md-4 offset-md-2">
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <br />
        <div class="form-group">
            <label for="OnSale">On Sale?</label>
            <input asp-for="OnSale" type="checkbox" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Save Changes</button>
        
    </form>
    <br />
    <a asp-action="Index" class="gray-button rounded col-md-4 offset-md-2">Page Back </a>
</div>



